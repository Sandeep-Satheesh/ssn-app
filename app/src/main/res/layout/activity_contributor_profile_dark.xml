<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/darkColor"
	tools:context=".ContributorProfileActivity">
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<ImageView
				android:layout_width="@dimen/_40sdp"
				android:layout_height="@dimen/_40sdp"
				android:padding="@dimen/_5sdp"
				android:tint="#ffffff"
				android:id="@+id/backIV"
				android:clickable="true"
				android:foreground="?android:selectableItemBackground"
				android:layout_marginStart="@dimen/_10sdp"
				android:layout_marginTop="@dimen/_10sdp"
				app:srcCompat="@drawable/ic_back"/>
				<androidx.cardview.widget.CardView
					android:layout_width="@dimen/_120sdp"
					android:layout_height="@dimen/_120sdp"
					app:cardElevation="0dp"
					android:layout_marginBottom="@dimen/_10sdp"
					app:cardBackgroundColor="@color/darkColor"
					android:layout_gravity="center"
					app:cardCornerRadius="@dimen/_60sdp">
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:id="@+id/userImageIV"
						android:transitionName="userImageTrans"
						android:scaleType="centerCrop"/>
				</androidx.cardview.widget.CardView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_5sdp"
				android:layout_gravity="center"
				android:text=""
				android:id="@+id/nameTV"
				android:singleLine="true"
				android:ellipsize="end"
				android:fontFamily="@font/open_sans_bold"
				android:textColor="#ffffff"
				android:textSize="@dimen/_23sdp"
				android:layout_marginStart="@dimen/_16sdp"
				android:layout_marginEnd="@dimen/_16sdp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text=""
				android:singleLine="true"
				android:ellipsize="end"
				android:id="@+id/workTV"
				android:fontFamily="@font/open_sans"
				android:textColor="#f2f2f2"
				android:textSize="@dimen/_14sdp"
				android:layout_marginStart="@dimen/_16sdp"
				android:layout_marginEnd="@dimen/_16sdp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginBottom="@dimen/_8sdp"
				android:layout_marginTop="@dimen/_10sdp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_8sdp"
					android:layout_marginEnd="@dimen/_8sdp"
					android:orientation="horizontal">
					<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_12sdp"
						app:cardCornerRadius="@dimen/_10sdp"
						android:id="@+id/linkCV1"
						android:clickable="true"
						android:foreground="?selectableItemBackgroundBorderless"
						android:layout_weight="1">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="@dimen/_10sdp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="@dimen/_20sdp"
								android:layout_height="@dimen/_20sdp"
								android:tint="@android:color/white"
								android:id="@+id/iconIV1"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="@dimen/_30sdp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:textSize="@dimen/_14sdp"
								android:id="@+id/linkTitleTV1"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:singleLine="true"
								android:ellipsize="end"
								android:id="@+id/linkTV1"
								android:textSize="@dimen/_12sdp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:id="@+id/linkCV2"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_12sdp"
						android:layout_weight="1"
						android:clickable="true"
						android:foreground="?selectableItemBackgroundBorderless"
						app:cardCornerRadius="@dimen/_10sdp">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="@dimen/_10sdp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="@dimen/_20sdp"
								android:layout_height="@dimen/_20sdp"
								android:tint="@android:color/white"
								android:id="@+id/iconIV2"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="@dimen/_30sdp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:textSize="@dimen/_14sdp"
								android:id="@+id/linkTitleTV2"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:singleLine="true"
								android:ellipsize="end"
								android:id="@+id/linkTV2"
								android:textSize="@dimen/_12sdp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>

					</androidx.cardview.widget.CardView>

				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_8sdp"
					android:layout_marginEnd="@dimen/_8sdp"
					android:orientation="horizontal"
					android:layout_weight="1">
					<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_12sdp"
						app:cardCornerRadius="@dimen/_10sdp"
						android:clickable="true"
						android:id="@+id/linkCV3"
						android:foreground="?selectableItemBackgroundBorderless"
						android:layout_weight="1">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="@dimen/_10sdp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="@dimen/_20sdp"
								android:layout_height="@dimen/_20sdp"
								android:tint="@android:color/white"
								android:id="@+id/iconIV3"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="@dimen/_30sdp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:textSize="@dimen/_14sdp"
								android:id="@+id/linkTitleTV3"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=""
								android:singleLine="true"
								android:ellipsize="end"
								android:id="@+id/linkTV3"
								android:textSize="@dimen/_12sdp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>

					</androidx.cardview.widget.CardView>
					<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:visibility="invisible"
						android:layout_margin="@dimen/_12sdp"
						android:layout_weight="1">

					</androidx.cardview.widget.CardView>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>