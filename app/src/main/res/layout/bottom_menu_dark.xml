<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkColor1">

    <RelativeLayout
        android:id="@+id/saveLL"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/iconIV"
            app:srcCompat="@drawable/ic_bookmark_unsaved"
            android:tint="@color/colorAccentDark"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/saveTV"
            android:textColor="#ffffff"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_14ssp"
            android:layout_toRightOf="@+id/iconIV"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/saveLL"
        android:id="@+id/shareLL"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/iconIV1"
            app:srcCompat="@drawable/ic_share"
            android:layout_centerVertical="true"
            android:tint="@color/colorAccentDark"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shareTV"
            android:text="Share"
            android:textColor="#ffffff"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_14ssp"
            android:layout_toRightOf="@+id/iconIV1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>