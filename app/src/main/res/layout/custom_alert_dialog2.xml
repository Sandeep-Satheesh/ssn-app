<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_white_solid_top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconIV"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_blue_solid"
                        android:padding="@dimen/_5sdp"
                        android:tint="#ffffff"
                        app:srcCompat="@drawable/ic_faq" />

                    <TextView
                        android:id="@+id/titleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iconIV"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_14ssp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/messageTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_below="@+id/layout_title"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="@dimen/_11ssp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/alert_blue_solid_bottom"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/okTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:padding="@dimen/_5sdp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

</LinearLayout>